     <script src="./jquery-1.8.2.js"></script>
     <script type="text/javascript" src="node_modules/socket.io/node_modules/socket.io-client/dist/socket.io.js"></script>
     <script type="text/javascript" >
       $(document).ready(function(){
          var socket = io.connect('http://localhost:8085');
              console.log("!!!");
          $("#up").bind("vmousedown",function(event){
              socket.emit('ud',{message:"up"});
          });
          $("#down").bind("vmousedown",function(event){
              socket.emit('dd',{message:"down"});
          });
          $("#right").bind("vmousedown",function(event){
              socket.emit('rd',{message:"right"});
          });
          $("#left").bind("vmousedown",function(event){
              socket.emit('ld',{message:"left"});
          });
          
          $("#up").bind("vmouseup",function(event){
              socket.emit('uu',{message:"up"});
          });
          $("#down").bind("vmouseup",function(event){
              socket.emit('du',{message:"down"});
          });
          $("#right").bind("vmouseup",function(event){
              socket.emit('ru',{message:"right"});
          });
          $("#left").bind("vmouseup",function(event){
              socket.emit('lu',{message:"left"});
          });          
          
          $("#dan1").bind("tap",function(event){
              socket.emit('dan1',{message:"1"});
          });
          $("#dan2").bind("tap",function(event){
              socket.emit('dan2',{message:"2"});
          });
          $("#dan3").bind("tap",function(event){
              socket.emit('dan3',{message:"3"});
          });
       });
      </script>     
     <script src="./jquery.mobile-1.3.2.min.js"></script>
